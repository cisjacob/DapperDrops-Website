<%- include('partials/header') %>

    <div class="container">
        <div class="card mx-auto border-0" style="width: 25rem;">
            <div class="card-body">
                <h1 class="fw-bold mb-3">Forgot Password</h1>
                <form action="/forgot" method="POST">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email" name="email">
                    </div>
                    <div class="mb-3">
                        <button type="submit" value="forgot" class="btn btn-dark">Send Reset Link</button>
                    </div>
                </form>

                <%
                    if(typeof message !== "undefined"){ %>
                        <p style="color: green;"><%= message %></p>
                    <% }
                %>

                <div class="row">
                    <div class="col-6">
                        <a href="/login" class="fw-bold" style="text-decoration: none; color:black;">Login</a>
                    </div>
                    <div class="col-6 me-auto">
                        <a href="/register" class="fw-bold" style="text-decoration: none; color:black;">Register</a>
                    </div>
                </div>
            </div>
        </div>
        

    </div>
    
<%- include('partials/footer') %>