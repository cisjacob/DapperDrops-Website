<%- include('partials/header'); %>
<div class="container">
    <div class="row">
        <%user.addresses.forEach(function(address){%>
            <div class="col">
                <div class="card" style="max-width: 240px;">
                  <div class="card-body">
                    <p class="card-text"> <%= address.fullName %></p>
                    <p class="card-text"> <%= address.phoneNumber %></p>
                    <p class="card-text"> <%= address.region %></p>
                    <p class="card-text"> <%= address.province %></p>
                    <p class="card-text"> <%= address.city %></p>
                    <p class="card-text"> <%= address.barangay %></p>
                    <p class="card-text"> <%= address.postalCode %></p>
                    <p class="card-text"> <%= address.streetName %></p>
