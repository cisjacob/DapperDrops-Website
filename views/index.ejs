<%- include('partials/header'); %>

<div class="container text-center">
  <div class="row">
      <div class="col-lg-6 col-sm-12 mb-5">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="images/image1.jpg" class="d-block w-100 cust-landing-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="images/image2.jpg" class="d-block w-100 cust-landing-img" alt="...">
            </div>
            <div class="carousel-item">
              <img src="images/image3.jpg" class="d-block w-100 cust-landing-img" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <div class="col-lg-6 col-sm-12">
          <h1 class="cust-landing-text">DAPPER DROPS</h1>
      </div>
  </div>
</div>

<div class="container mt-5">
  <h1 class="cust-title-text">New Arrivals</h1>
  
  <div class="row">
    <%newProducts.forEach(function(product){%>
      <div class="col-lg-4 col-sm-6">
        <a href="/products/item/<%= product._id %>" class="cust-prod-link">
          <div class="card border-0 " style="width: 18rem;">
            <img src="/uploads/<%= product.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text"> <%= product.brand %></p>
              <p class="card-text cust-prod-text"> <%= product.name %> </p>
              <p class="card-text cust-prod-text">₱ <%= product.price %> </p>
            </div>
          </div>
        </a>  
      </div>
    <% }) %>
  </div>
</div>

<div class="container mt-5">
  <h1 class="cust-title-text">Featured Products</h1>
  
  <div class="row">
    <%newProducts.forEach(function(product){%>
      <div class="col-lg-4 col-sm-6">
        <a href="/products/item/<%= product._id %>" class="cust-prod-link">
          <div class="card border-0 " style="width: 18rem;">
            <img src="/uploads/<%= product.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text"> <%= product.brand %></p>
              <p class="card-text cust-prod-text"> <%= product.name %> </p>
              <p class="card-text cust-prod-text">₱ <%= product.price %> </p>
            </div>
          </div>
        </a>  
      </div>
    <% }) %>
      
  </div>
</div>

<%- include('partials/footer'); %>