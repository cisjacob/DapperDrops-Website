<%- include('innerPartials/header'); %>
<div class="container">
    <h1 class="cust-title-text mb-5"><%= item.category + " " %> / <%= item.brand + " " + item.name %></h1>
    <div class="row">
        <div class="col-lg-6">
            <img src="/uploads/<%= item.image %>" style="width: 80%;" alt="">
        </div>
        <div class="col-lg-4">
            <h1><%= item.brand %></h1>
            <h1 class="cust-title-text"><%= item.name %></h1>
            <h1>â‚± <%= item.price %></h1>
            <h5> <%= item.description %></h5>    
            <div class="d-grid gap-2">
            <form action="/cart/add-to-cart" method="post">
                <div class="mb-3">
                    <label for="variation" class="form-label">Size:</label>
                    <select name="variation" id="category" class="form-control">
                        <% item.variations.forEach(function(variation){ %>
                            <option value="<%= variation.name %>"><%= variation.name %></option>
                        <% }) %>
                    </select>
                </div>
                <input type="number" name="quantity" value="1">
                <input type="hidden" name="prodId" value="<%= item._id %>">
                <button class="btn btn-dark btn-lg" type="submit">ADD TO CART</button>
                <% if(userId){ %>
                    <button class="btn btn-light btn-lg" formaction="/products/add-to-wishlist">ADD TO WISHLIST</button>  
                <% } %>

            </form>    

            </div> 
        </div>
    </div>
</div>
<%- include('innerPartials/footer'); %>

