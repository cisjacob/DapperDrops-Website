    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

    let filename = '../../charts/sales-sortByYear.csv';

    d3.csv(filename).then(function(datapoints){
        console.log(datapoints);
        const earnings = [];
        const dateCreated = [];
        datapoints.forEach(data => {
            earnings.push(data.earnings);
            dateCreated.push(data.date);
        });
        console.log(earnings);
        console.log(dateCreated);
        const data = {
    labels: dateCreated,
    datasets: [{
        label: 'Earnings Per Year',
        data: earnings,
        backgroundColor: [
        'rgba(255, 26, 104, 0.2)',
        'rgba(54, 162, 235, 0.2)',
        'rgba(255, 206, 86, 0.2)',
        'rgba(75, 192, 192, 0.2)',
        'rgba(153, 102, 255, 0.2)',
        'rgba(255, 159, 64, 0.2)',
        'rgba(0, 0, 0, 0.2)'
        ],
        borderColor: [
        'rgba(255, 26, 104, 1)',
        'rgba(54, 162, 235, 1)',
        'rgba(255, 206, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(0, 0, 0, 1)'
        ],
        borderWidth: 1
        }]
    };

    // config 
    const config = {
    type: 'line',
    data,
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    // render init block
    const myChart = new Chart(document.getElementById('myChart'),config
    );
    });
    // setup 

    </script>