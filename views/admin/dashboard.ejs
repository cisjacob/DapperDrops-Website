<script>

let filename = '../../charts/sales.csv';

d3.csv(filename).then(function(datapoints){
console.log(datapoints);
const earnings = [];
const dateCreated = [];
datapoints.forEach(data => {
    earnings.push(data.earnings);
    dateCreated.push(data.date);
});
console.log(earnings);
console.log(dateCreated);
const data = {
labels: dateCreated,
datasets: [{
label: 'Earnings Per Date',
data: earnings,
backgroundColor: [
'rgba(255, 26, 104, 0.2)',
'rgba(54, 162, 235, 0.2)',
'rgba(255, 206, 86, 0.2)',
'rgba(75, 192, 192, 0.2)',
'rgba(153, 102, 255, 0.2)',
'rgba(255, 159, 64, 0.2)',
'rgba(0, 0, 0, 0.2)'
],
borderColor: [
'rgba(255, 26, 104, 1)',
'rgba(54, 162, 235, 1)',
'rgba(255, 206, 86, 1)',
'rgba(75, 192, 192, 1)',
'rgba(153, 102, 255, 1)',
'rgba(255, 159, 64, 1)',
'rgba(0, 0, 0, 1)'
],
borderWidth: 1
}]
};

// config 
const config = {
type: 'line',
data,
options: {
    scales: {
        y: {
            beginAtZero: true
        }
    }
}
};

// render init block
const myChart = new Chart(document.getElementById('myChart'),config
);
});
// setup

//CHART 2

let filename2 = '../../charts/inventory-stock-level.csv';

d3.csv(filename2).then(function(datapoints){
    const name = [];
        const quantityRemaining = [];

        datapoints.forEach(data => {
            name.push(data.brand + " - " + data.name);
            quantityRemaining.push(data.quantityRemaining);
        });

        const data = {
            labels: name,
            datasets: [{
                label: 'Quantity Remaining Per Product',
                data: quantityRemaining,
                backgroundColor: [
                'rgba(255, 26, 104, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(0, 0, 0, 0.2)'
                ],
                borderColor: [
                'rgba(255, 26, 104, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(0, 0, 0, 1)'
                ],
                borderWidth: 1
                }]
            };

    //Horiznal dotted line

    const horizontalDottedLine = {
        id: 'horizontalDottedLine',
        afterDatasetsDraw(chart, args, options){
            const { ctx, chartArea: { top, right, bottom, left, width, height },
                scales: { x, y } } = chart;
                ctx.save();
        //draw line
        ctx.strokeStyle = 'red';
        ctx.setLineDash([20, 30]);
        ctx.strokeRect(left, y.getPixelForValue(3), width, 0);
        ctx.restore();
        }
    }

    const horizontalDottedLine2 = {
        id: 'horizontalDottedLine2',
        afterDatasetsDraw(chart, args, options){
            const { ctx, chartArea: { top, right, bottom, left, width, height },
                scales: { x, y } } = chart;
                ctx.save();
        //draw line
        ctx.strokeStyle = 'orange';
        ctx.setLineDash([20, 30]);
        ctx.strokeRect(left, y.getPixelForValue(6), width, 0);
        ctx.restore();
        }
    }

    const horizontalDottedLine3 = {
        id: 'horizontalDottedLine3',
        afterDatasetsDraw(chart, args, options){
            const { ctx, chartArea: { top, right, bottom, left, width, height },
                scales: { x, y } } = chart;
                ctx.save();
        //draw line
        ctx.strokeStyle = 'green';
        ctx.setLineDash([20, 30]);
        ctx.strokeRect(left, y.getPixelForValue(12), width, 0);
        ctx.restore();
        }
    }
    // config 
    const config = {
    type: 'bar',
    data,
    options: {
        scales: {
            y: {
                beginAtZero: true
            }
        }
    },
    plugins: [horizontalDottedLine, horizontalDottedLine2, horizontalDottedLine3]
    };


    // render init block
    const myChart2 = new Chart(document.getElementById('myChart2'),config
    );
});
    // setup 
// setup 

</script>
         