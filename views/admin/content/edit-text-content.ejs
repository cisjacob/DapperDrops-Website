<%- include('../../innerPartials/admin/header', {name: fullName}); %>

<div class="container">
    <h1 class="fw-bold text-center mt-2 mb-3">Edit <%= title %></h1>
    <form action="/admin/content/edit-text-<%= field %>" method="POST">
        <div class="mb-3">
            <label for="" class="form-label"><%= title %></label>
             <% if(field == 'aboutUsParagraph1' || field == 'aboutUsParagraph2' || field == 'aboutUsParagraph3'){ %>
                <textarea name="newText"class="form-control" id="" rows="4" required></textarea>
            <% } else { %>
                <input type="text" name="newText" class="form-control" required>
            <% } %>
        </div>
        <button class="btn btn-primary" type="submit">Edit</button>
        <a href="/admin/content" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<%- include('../../innerPartials/admin/footer'); %>